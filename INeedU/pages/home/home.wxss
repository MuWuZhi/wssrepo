  margin-top:1vh;
}

.enclosure1{
  height:30vh;
  width:90vw;
  margin-top:1vh;
}

.location{
  font-size: 14px;
  color:#807f7f;
  margin-top:0.5vh;
  display: flex;
  flex-direction: row;

}

.location view{
  color:#4876FF;
  font-size: 10px;
  border:1px solid #4876FF;
  
  padding-left: 10rpx;
  padding-right: 10rpx;
  border-radius: 6rpx;
  line-height: 40rpx;
  text-align: center;
  margin-right: 15rpx;
