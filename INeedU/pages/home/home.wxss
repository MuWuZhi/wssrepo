  font-weight: lighter;
  color: #3f3f3e
}

.recieve{
  border:1px solid #f9b15f;
  height:60rpx;
  width:120rpx;
  border-radius: 10rpx;
  line-height: 60rpx;
  text-align: center;
 margin-left:35vw;
 margin-top:3vh;
  font-size: 17px;
  font-weight: lighter;
  color:#f9b15f;
}

.task{
  margin-left: 5vw;
  padding-bottom:2vh;
}

.title{
  font-size:17px;

}
.content{
  width:92vw;
  font-size: 16px;
  line-height: 24px;
  color:#1b1b1b;
  font-weight: lighter;
}

.enclosure3{
  height:15vh;
  width:29vw;
  margin-right:1vw;
  margin-top:1vh;
}

.enclosure2{
  height:20vh;
  width:44vw;
