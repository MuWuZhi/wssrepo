/* pages/home/home.wxss */
page{
  background-color: #f7f7f7;
}
.header{
  background-color: #f9b15f;
  display: flex;
  flex-direction: row;
  height:6vh;
}

.search{
  font-size: 17px;
  color:#FFFAF0;
  font-weight: lighter;
  margin-left: 5vw;
  width:40%;
}

.publish{
  font-size: 17px;
  color:#FFFAF0;
  font-weight: lighter;
  margin-left: 35vw;
}

.userInfo{
  display: flex;
  flex-direction: row;
}

.body{
  background-color:white;
  margin-top: 2vh;
}

.avatar{
  height:120rpx;
  width:120rpx;
  border-radius: 50%;
  object-fit: cover;
  display: block;
  overflow: hidden;
  margin-left: 3vw;
  margin-top: 1vh;
}

.nickname{
  font-size: 16px;
  margin-left:2vw;
